@model ProyectoP5.Models.EmpresaCRUDModel

@{
    ViewBag.Title = "EditarEmpresa";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@Html.Partial("~/Views/Shared/_LayoutEditarCRUD.cshtml")

<section id="content">
    <div class="container">
        <div class="content__header">
            <h2>Actualizar <small>puede editar aqui.</small></h2>
        </div>

        <div class="invoice" style="background-color: #181f23">
            @using (Html.BeginForm())
            {
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" style=" color: #fbfbfb">Editar Empresa</h4>
                    </div>

                    <div class="modal-body">

                        <div class="card__body">

                            <div class="form-group">
                                @Html.TextBoxFor(model => model.IdEmpresa, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.IdEmpresa), disabled = "disable" })
                                @Html.HiddenFor(model => model.IdEmpresa)
                                <i class="form-group__bar"></i>
                            </div>

                            <div class="form-group">
                                @Html.TextBoxFor(model => model.NombreEmpresa, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.NombreEmpresa), required = "required" })
                                <i class="form-group__bar"></i>
                            </div>


                            <div class="form-group">
                                @Html.TextBoxFor(model => model.TelefonoEmpresa, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.TelefonoEmpresa), required = "required", type = "text", data_mask = "0000-00-00", maxlength = "19" })
                                <i class="form-group__bar"></i>
                            </div>


                            <div class="form-group">
                                @Html.TextBoxFor(model => model.CorreoEmpresa, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.CorreoEmpresa), required = "required", type = "email" })
                                <i class="form-group__bar"></i>
                            </div>



                            <div class="form-group">
                                @Html.TextBoxFor(model => model.DireccionEmpresa, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.DireccionEmpresa), required = "required", type = "text" })
                                <i class="form-group__bar"></i>
                            </div>
                            <br>

                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-default">Actualizar</button>
                        <a type="button" class="btn btn-default" href="@Url.Action("AdminCRUD", "Admin")">Cerrar</a>
                    </div>
                </div>
            }
        </div>

    </div>
</section>