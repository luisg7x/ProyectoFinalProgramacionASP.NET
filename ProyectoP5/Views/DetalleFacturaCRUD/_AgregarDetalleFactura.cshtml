@model ProyectoP5.Models.DetalleFacturaCRUDModel

@using (Html.BeginForm("DetalleFacturaCRUDAdd", null, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">Añadir Detalle Factura</h4>
        </div>
        <div class="modal-body">

            <div class="card__body">

                <div class="form-group">
                    @Html.TextBoxFor(model => model.NUMFACTURA, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.NUMFACTURA), type="number", required = "required" })
                    <i class="form-group__bar"></i>
                </div>

                <div class="form-group form-group--select">
                    @Html.DropDownListFor(e => e.IDPRODUCTO, Model.PRODUCTOLIST,"Seleccione un Producto", new { @class = "form-control", required = "required" })
                </div>

                <div class="form-group">
                    @Html.TextBoxFor(model => model.CANTIDADPRODUCTO, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.CANTIDADPRODUCTO), type = "number", required = "required" })
                    <i class="form-group__bar"></i>
                </div>

                <div class="form-group">
                    @Html.TextBoxFor(model => model.PRECIOPARCIAL, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.PRECIOPARCIAL), type = "number", required = "required" })
                    <i class="form-group__bar"></i>
                </div>

                <br>

            </div>

        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-default">Insertar</button>
            <button type="button" class="btn btn-default" id="closeDetalleFactura">Cerrar</button>
        </div>
    </div>
}



