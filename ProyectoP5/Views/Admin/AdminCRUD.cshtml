                            <div class="card__header">
                                <h2>Administrar Tablas<small>CRUD</small></h2>
                            </div>

                            <div class="card__body">

                                <div class="body">
                                    @{Html.RenderAction("_TablaAdmin","AdminCRUD"); }
                                </div>


                            </div>
                            <div id="floating-button" data-toggle="tooltip" data-placement="left" data-original-title="Crear">
                                <a id="AddAdmin" name="AddAdminCRUD" href="#AddAdminCRUD"><p class="plus">+</p></a>
                            </div>

                        </div>

                    </div>
                    <div class="tab-pane" id="tab-tipoproducto-2">

