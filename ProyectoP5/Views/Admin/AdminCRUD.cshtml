@{ var table = 0; }
@{
    ViewBag.Title = "AdminCRUD";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<head>
    <style type="text/css">
        #lean_overlay {
            position: fixed;
            z-index: 100;
            top: 0px;
            left: 0px;
            height: 100%;
            width: 100%;
            background: #000;
            display: none;
        }

        .popup {
            position: absolute;
            width: 600px;
            display: none;
            -webkit-border-radius: 5px;
            max-height: calc(100vh - 210px);
            overflow-y: auto;
        }

        ::-webkit-scrollbar {
            display: none;
        }
    </style>

</head>

@Html.Partial("~/Views/Shared/_LayoutEditarCRUD.cshtml")

        <section id="content">

            <div class="tab">
                <ul class="tab-nav tab-nav--justified">
                    <li class="active"><a href="#tab-home-2" data-toggle="tab">Admins</a></li>
                    <li><a href="#tab-tipoproducto-2" data-toggle="tab">Tipo  Producto</a></li>
                    <li><a href="#tab-producto-2" data-toggle="tab">Producto</a></li>
                    <li><a href="#tab-cliente-2" data-toggle="tab">Clientes</a></li>
                    <li><a href="#tab-empresa-2" data-toggle="tab">Empresas</a></li>
                    <li><a href="#tab-factura-2" data-toggle="tab">Facturas</a></li>
                    <li><a href="#tab-detalleFactura-2" data-toggle="tab">Detalle Factura</a></li>
                </ul>

                <div class="tab-content">
                    <div class="tab-pane active" id="tab-home-2">
