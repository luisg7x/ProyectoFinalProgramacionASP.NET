@section Scripts{
<script type="text/javascript">
    $("#AddAdmin").leanModal();
    $("#AddAdmin").leanModal({ top: 200, overlay: 0.4, closeButton: "#closeAdmin" });
    $("#AddTipoProducto").leanModal();
    $("#AddTipoProducto").leanModal({ top: 200, overlay: 0.4, closeButton: "#closeTipoProducto" });
    $("#AddProducto").leanModal();
    $("#AddProducto").leanModal({ top: 200, overlay: 0.4, closeButton: "#closeProducto" });
    $("#AddCliente").leanModal();
    $("#AddCliente").leanModal({ top: 200, overlay: 0.4, closeButton: "#closeCliente" });
    $("#AddEmpresa").leanModal();
    $("#AddEmpresa").leanModal({ top: 200, overlay: 0.4, closeButton: "#closeEmpresa" });
    $("#AddFactura").leanModal();
    $("#AddFactura").leanModal({ top: 200, overlay: 0.4, closeButton: "#closeFactura" });
    $("#AddDetalleFactura").leanModal();
    $("#AddDetalleFactura").leanModal({ top: 200, overlay: 0.4, closeButton: "#closeDetalleFactura" });


    $('[class="form-control date-time-picker"]').datetimepicker({
        format: 'DD-MM-YYYY HH:mm:ss'
    });

</script>
}

