                    </div>
                </div>
            </div>



       


 </section>



<div class="popup" id="AddAdminCRUD">
    @{Html.RenderAction("_AgregarAdmin","AdminCRUD");}
</div>

<div class="popup" id="AddTipoProductoCRUD">
    @{Html.RenderAction("_AgregarTipoProducto","TipoProductoCRUD");}
</div>

<div class="popup" id="AddProductoCRUD">
    @{Html.RenderAction("_AgregarProducto","ProductoCRUD");}
</div>

<div class="popup" rel="leanmodal" id="AddClienteCRUD">
    @{Html.RenderAction("_AgregarCliente","ClienteCRUD");}
</div>

