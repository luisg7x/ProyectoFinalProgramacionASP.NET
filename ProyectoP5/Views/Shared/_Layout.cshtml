<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-sale=1.0">

    <link rel="shortcut icon" type="image/x-icon" href="@Url.Content("~/Content/images/icono.ico")">
 
    <script src="@Url.Content("~/Content/js/pace.min.js")"></script>

    <script src="http://code.jquery.com/jquery-latest.js"></script>

    

    <link href="@Url.Content("~/Content/css/estilos.css")" rel="stylesheet" type="text/css" />


    <link href="@Url.Content("~/Content/css/font-awesome.css")" rel="stylesheet">
    <script src="@Url.Content("~/content/js/main.js")"></script>
    <title>Inicio</title>



</head>
<body>
    <div class="Contenedor">
        <div class="head">
            <img src="@Url.Content("~/content/images/header.jpg")">
        </div>

        <header>
            <div class='menu_bar'>
                <a href='#' class='bt-menu'><span class='icon-home'></span>Menu </a>

            </div>
            <nav>

                <ul>
                    <li><a href="@Url.Action("Index", "Inicio")"><span class='icon-home'></span>Inicio</a></li>
     

                    <li class='submenu'>
                        <a href='#'><span class='icon-truck'></span>Productos <span class='caret icon-chevron-down'> </span></a>
                        <ul class='hijos'>

                            <li><a href="@Url.Action("Producto", "Inicio", new { id = 1 })"><span class='icon-angle-right'> </span>Procesadores</a></li>

                            <li><a href='@Url.Action("Producto", "Inicio", new { id = 2 })'><span class='icon-angle-right'> </span>Tarjetas de Video </a></li>

                            <li><a href='@Url.Action("Producto", "Inicio", new { id = 3 })'><span class='icon-angle-right'> </span>Tarjetas Madre </a></li>

                        </ul>

                    </li>

                    <li><a href="@Url.Action("Contact", "Inicio")"><span class='icon-group'></span>Contactenos</a></li>

                    <li><a href='@Url.Action("About", "Inicio")'><span class='icon-info-sign'></span>Acerca&nbsp;de&nbsp;Nosotros</a></li>

                    @Html.Partial("LoggedIn");

                    <li><a href='@Url.Action("Carrito", "Inicio")'><span class='icon-shopping-cart'></span>Carrito</a></li>


                </ul>
            </nav>
        </header>



        @RenderBody()

    </div>
    
        @{Html.RenderAction("Footer");}

    
    @RenderSection("scripts", required: false)
</body>
</html>



 