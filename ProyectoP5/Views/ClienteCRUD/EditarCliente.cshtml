@model ProyectoP5.Models.ClienteCRUDModel

@{
    ViewBag.Title = "EditarCliente";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@Html.Partial("~/Views/Shared/_LayoutEditarCRUD.cshtml")

<section id="content">
    <div class="container">
        <div class="content__header">
            <h2>Cambiar <small>Puede editar aqui</small></h2>
        </div>

        <div class="invoice" style="background-color: #181f23">
            @using (Html.BeginForm())
            {
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" style=" color: #fbfbfb">Editar Cliente</h4>
                    </div>

                    <div class="modal-body">

                        <div class="card__body">
                            <p style="font-size: 16px; color: red; text-align: center; margin-bottom: 16px;">@ViewData["error"]</p>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.IdCliente, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.IdCliente), disabled = "disable" })
                                @Html.HiddenFor(model => model.IdCliente)
                                <i class="form-group__bar"></i>
                            </div>

                            <div class="form-group">
                                @Html.TextBoxFor(model => model.NombreCliente, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.NombreCliente), required = "required" })
                                <i class="form-group__bar"></i>
                            </div>

                            <div class="form-group">
                                @Html.TextBoxFor(model => model.ApellidoCliente, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.ApellidoCliente), required = "required" })
                                <i class="form-group__bar"></i>
                            </div>

                            <div class="form-group">
                                @Html.TextBoxFor(model => model.NumTarjeta, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.NumTarjeta), required = "required", type = "text", data_mask = "0000-0000-0000", maxlength = "19" })
                                <i class="form-group__bar"></i>
                            </div>


                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Correo, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.Correo), required = "required", type = "email" })
                                <i class="form-group__bar"></i>
                            </div>

                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Usuario, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.Usuario), required = "required" })
                                <i class="form-group__bar"></i>
                            </div>


                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.Password), required = "required", type = "password", value = "" })
                                <i class="form-group__bar"></i>
                            </div>

                            <div class="radio">
                                <label>
                                    @Html.RadioButtonFor(model => model.Sexo, "Hombre")
                                    <i class="input-helper"></i>
                                    Hombre
                                </label>
                            </div>

                            <div class="clearfix"></div>

                            <div class="radio">
                                <label>
                                    @Html.RadioButtonFor(model => model.Sexo, "Mujer")
                                    <i class="input-helper"></i>
                                    Mujer
                                </label>
                            </div>
                            <br>

                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-default">Actualizar</button>
                        <a type="button" class="btn btn-default" href="@Url.Action("AdminCRUD", "Admin")">Cerrar</a>
                    </div>
                </div>
            }
        </div>

    </div>
</section>