@model ProyectoP5.Models.FacturaCRUDModel

@using (Html.BeginForm("FacturaCRUDAdd", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">Agregar Factura</h4>
        </div>
        <div class="modal-body">

            <div class="card__body">

                <div class="card__body">
                    @Html.TextBoxFor(model => model.FECHA, new { @class = "form-control date-time-picker", type = "datetime", placeholder = Html.DisplayNameFor(model => model.FECHA), required = "required" })
                    <i class="form-group__bar"></i>
                </div>

                <div class="form-group form-group--select">
                    @Html.DropDownListFor(e => e.IDEMPRESA, Model.EMPRESALIST,"Seleccione una Empresa" , new { @class = "form-control", required = "required", data_placeholder="Seleccione una Empresa" })
                </div>


                <div class="form-group">
                    @Html.TextBoxFor(model => model.IDCLIENTE, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.IDCLIENTE), required = "required", type = "text", data_mask = "0-0000-0000", maxlength = "19" })
                    <i class="form-group__bar"></i>
                </div>



                <div class="form-group">
                    @Html.TextBoxFor(model => model.PRECIOTOTAL, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.PRECIOTOTAL), required = "required", type="number" })
                    <i class="form-group__bar"></i>
                </div>

             
                <br>

            </div>

        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-default">Insertar</button>
            <button type="button" class="btn btn-default" id="closeFactura">Cerrar</button>
        </div>
    </div>
}



