@model ProyectoP5.Models.AdminCRUDModel

@{
    ViewBag.Title = "EditarAdmin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@Html.Partial("~/Views/Shared/_LayoutEditarCRUD.cshtml")

<section id="content">
    <div class="container">
        <div class="content__header">
            <h2>Update <small>Puede editar aqui</small></h2>
        </div>

        <div class="invoice" style="background-color: #181f23">
            @using (Html.BeginForm())
            {
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" style=" color: #fbfbfb">Editar Administrador</h4>
                    </div>

                    <div class="modal-body">

                        <div class="card__body">
                            <p style="font-size: 16px; color: red; text-align: center; margin-bottom: 16px;">@ViewData["error"]</p>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.IdAdmin, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.IdAdmin), disabled = "disable" })
                                @Html.HiddenFor(model => model.IdAdmin)
                                <i class="form-group__bar"></i>
                            </div>

                            <div class="form-group">
                                @Html.TextBoxFor(model => model.NombreAdmin, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.NombreAdmin), required = "required" })
                                <i class="form-group__bar"></i>
                            </div>

                            <div class="form-group">
                                @Html.TextBoxFor(model => model.ApellidoAdmin, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.ApellidoAdmin), required = "required" })
                                <i class="form-group__bar"></i>
                            </div>

                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Usuario, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.Usuario), required = "required" })
                                <i class="form-group__bar"></i>
                            </div>


                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Contraseña, new { @class = "form-control", placeholder = Html.DisplayNameFor(model => model.Contraseña), required = "required", type = "password" })
                                <i class="form-group__bar"></i>
                            </div>
                            <br>

                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-default">Actualizar</button>
                        <a type="button" class="btn btn-default" href="@Url.Action("AdminCRUD", "Admin")">Cerrar</a>
                    </div>
                </div>
            }
        </div>

    </div>
</section>

